generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("buyer") // buyer, seller, agent, admin
  createdAt DateTime @default(now())
  properties Property[]
  favorites  Favorite[]
  messages   Message[] @relation("UserMessages")
}

model Property {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  type        String   // rent, buy
  beds        Int
  baths       Int
  area        Int
  location    String
  images      String[] // Cloudinary URLs
  status      String   @default("available")
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  favorites   Favorite[]
  messages    Message[]
}

model Favorite {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId Int
  createdAt  DateTime @default(now())
}

model Message {
  id           Int      @id @default(autoincrement())
  content      String
  createdAt    DateTime @default(now())
  property     Property @relation(fields: [propertyId], references: [id])
  propertyId   Int
  sender       User     @relation("UserMessages", fields: [senderId], references: [id])
  senderId     Int
  recipientId  Int
}
